pipeline {
    agent any

    tools {
        python 'Python3'  // This should be configured in Jenkins â†’ Global Tool Configuration
    }

    environment {
        VENV_DIR = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/alx-backend-python/alx-backend-python.git',
                    credentialsId: 'your-github-credentials-id'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                sh '''
                    cd messaging_app
                    python3 -m venv ${VENV_DIR}
                    source ${VENV_DIR}/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests with Pytest') {
            steps {
                sh '''
                    cd messaging_app
                    source ${VENV_DIR}/bin/activate
                    pytest --junitxml=report.xml
                '''
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'messaging_app/report.xml'
            }
        }
    }

    triggers {
        // Manual trigger only
    }
}
